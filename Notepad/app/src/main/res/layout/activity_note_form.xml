<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.NoteFormActivity">

    <EditText
        android:id="@+id/activity_form_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:hint="@string/title_name"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintTextFieldSize,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/activity_form_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="23sp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/description_name"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_form_title"
        app:layout_constraintStart_toStartOf="@+id/activity_form_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_form_title"
        tools:ignore="VisualLintTextFieldSize" />


</androidx.constraintlayout.widget.ConstraintLayout>